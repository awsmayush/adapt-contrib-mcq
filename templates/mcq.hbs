<div class="component__inner m-mcq__inner" role="region" aria-label="{{_globals._components._mcq.ariaRegion}}" {{#if _globals._components._mcq.ariaRegion}}tabindex="0"{{/if}}>

  {{> component this}}

  <div class="component__widget m-mcq__widget{{#unless _isEnabled}} is-disabled{{#if _isInteractionComplete}} is-complete is-submitted show-user-answer{{#if _isCorrect}} is-correct{{/if}}{{/if}}{{/unless}}">

    {{#each _items}}
    <div class="m-mcq__item js-mcq-item item-{{@index}}{{#unless ../_isEnabled}}{{#if ../_canShowMarking}}{{#if _isCorrect}} is-correct{{else}} is-incorrect{{/if}}{{/if}}{{/unless}}">

      <input class="m-mcq__item-input js-item-input" type="checkbox" id="{{../_id}}-{{@index}}"{{#unless ../_isEnabled}} disabled{{/unless}}/>
      <label class="m-mcq__item-label js-item-label{{#unless ../_isEnabled}} is-disabled{{/unless}}{{#if _isSelected}} is-selected{{/if}}" id="{{../_id}}-{{@index}}-aria" for="{{../_id}}-{{@index}}" >

        <div class="m-mcq__item-state">

          <div class="m-mcq__item-icon m-mcq__item-answer-icon{{#if ../_isRadio}} is-radio{{else}} is-checkbox{{/if}}">
            <div class="icon"></div>
          </div>

          <div class="m-mcq__item-icon m-mcq__item-correct-icon">
            <div class="icon"></div>
          </div>

          <div class="m-mcq__item-icon m-mcq__item-incorrect-icon">
            <div class="icon"></div>
          </div>

        </div>

        <div class="m-mcq__item-text">
          <div class="m-mcq__item-text-inner">
            {{{text}}}
          </div>
        </div>

      </label>

    </div>
    {{/each}}

  </div>

  <div class="btn__container"></div>

</div>
